<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_10dp"
    android:layout_marginRight="@dimen/margin_2"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/shop_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@mipmap/tag" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/shop_iv">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="餐饮服务、单位食堂检测"
            android:textColor="@color/jgj_black"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/margin_2"
            />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_tv"
            android:id="@+id/train_rl"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/un_success"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/margin_2"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/train_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/gray_dark"
                android:text="从业人员食品安全知识培训记录及“五病”调离记录齐全"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginLeft="@dimen/margin_3"
                />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_below="@+id/train_tv"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/margin_1"
                >

                <RadioButton
                    android:id="@+id/train"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="是"
                    android:textColor="@drawable/selector_radio_daily_txt"
                    android:textSize="@dimen/text_normal"
                    android:drawableLeft="@drawable/selector_radio_daily_yes"
                    android:drawablePadding="@dimen/margin_1"
                    android:background="@null"
                    android:padding="@dimen/margin_1"
                    />

                <RadioButton
                    android:id="@+id/trainNull"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="否"
                    android:textColor="@drawable/selector_radio_daily_txt"
                    android:textSize="@dimen/text_normal"
                    android:drawableLeft="@drawable/selector_radio_daily_no"
                    android:drawablePadding="@dimen/margin_1"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:checked="false"
                    android:background="@null"
                    android:padding="@dimen/margin_1"
                    />


            </RadioGroup>


        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/train_rl"
            android:id="@+id/disinfection_rl"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/un_success"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/margin_2"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/disinfection_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/gray_dark"
                android:text="配备消毒柜等消毒设备并做好消毒记录"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginLeft="@dimen/margin_3"
                />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_below="@+id/disinfection_tv"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/margin_1"
                >

                <RadioButton
                    android:id="@+id/disinfection"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="是"
                    android:textColor="@drawable/selector_radio_daily_txt"
                    android:textSize="@dimen/text_normal"
                    android:drawableLeft="@drawable/selector_radio_daily_yes"
                    android:drawablePadding="@dimen/margin_1"
                    android:background="@null"
                    android:padding="@dimen/margin_1"
                    />

                <RadioButton
                    android:id="@+id/disinfectionNull"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="否"
                    android:textColor="@drawable/selector_radio_daily_txt"
                    android:textSize="@dimen/text_normal"
                    android:drawableLeft="@drawable/selector_radio_daily_no"
                    android:drawablePadding="@dimen/margin_1"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:checked="false"
                    android:background="@null"
                    android:padding="@dimen/margin_1"
                    />


            </RadioGroup>


        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/disinfection_rl"
            android:id="@+id/poster_rl"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/un_success"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/margin_2"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/poster_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/gray_dark"
                android:text="配备文明餐桌桌牌，宣传海报上墙"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginLeft="@dimen/margin_3"
                />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_below="@+id/poster_tv"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/margin_1"
                >

                <RadioButton
                    android:id="@+id/poster"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="是"
                    android:textColor="@drawable/selector_radio_daily_txt"
                    android:textSize="@dimen/text_normal"
                    android:drawableLeft="@drawable/selector_radio_daily_yes"
                    android:drawablePadding="@dimen/margin_1"
                    android:background="@null"
                    android:padding="@dimen/margin_1"
                    />

                <RadioButton
                    android:id="@+id/posterNull"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="否"
                    android:textColor="@drawable/selector_radio_daily_txt"
                    android:textSize="@dimen/text_normal"
                    android:drawableLeft="@drawable/selector_radio_daily_no"
                    android:drawablePadding="@dimen/margin_1"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:checked="false"
                    android:background="@null"
                    android:padding="@dimen/margin_1"
                    />


            </RadioGroup>


        </RelativeLayout>

       <!-- <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_tv"
            android:layout_marginTop="4dp"
            android:paddingBottom="@dimen/margin_2"
            android:scrollbars="none" />-->

    </RelativeLayout>


</RelativeLayout>