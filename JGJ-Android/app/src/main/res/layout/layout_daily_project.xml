<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_10dp"
    android:layout_marginRight="@dimen/margin_2"
    >

    <ImageView
        android:id="@+id/shop_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/tag"
        android:layout_marginTop="27dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/shop_iv"
        >

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/jgj_black"
            android:textSize="@dimen/text_big"
            android:text="项目检测"
            android:layout_marginTop="@dimen/margin_3"
            android:layout_marginLeft="@dimen/margin_3"
            />
        <LinearLayout
            android:id="@+id/person_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/name_tv"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="@dimen/margin_3"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/gray_dark"
                android:text="从业人员"
                />

            <RelativeLayout
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/work_et"
                    style="@style/editViewStyle_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider_line"
                    android:layout_below="@+id/work_et"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/gray_dark"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/health_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/person_ll"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="@dimen/margin_3"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/gray_dark"
                android:text="持有有限健康证明"
                />

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/health_et"
                    style="@style/editViewStyle_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider_line"
                    android:layout_below="@+id/health_et"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/gray_dark"
                />

            <TextView
                style="@style/text_tip_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（应有"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="@dimen/text_small_x"
                android:textColor="@color/jgj_green"
                />
            <TextView
                style="@style/text_tip_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人）"
                android:maxLines="1"
                android:ellipsize="end"
                />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_below="@+id/health_ll"
            android:layout_marginTop="12dp"
            />

    </RelativeLayout>

</RelativeLayout>