<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_1"
    android:layout_marginTop="@dimen/margin_1"
    >

    <TextView
        android:id="@+id/info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/gray_dark"
        android:text="亮证经营（《食品经营许可证》、《食品流通许可证》、《餐饮服务许可证》、《营业执照》"
        />

    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_below="@+id/info_tv"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        >

        <RadioButton
            android:id="@+id/radio_single"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="是"
            android:textColor="@color/jgj_green"
            android:textSize="@dimen/text_normal"
            android:drawableLeft="@mipmap/yes_pre"
            android:drawablePadding="@dimen/margin_1"
            android:background="@null"
            />

        <RadioButton
            android:id="@+id/radio_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:text="否"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_normal"
            android:drawableLeft="@mipmap/no"
            android:drawablePadding="@dimen/margin_1"
            android:layout_marginLeft="@dimen/margin_3"
            android:checked="false"
            android:background="@null"
            />


    </RadioGroup>


</RelativeLayout>