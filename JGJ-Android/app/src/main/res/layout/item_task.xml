<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_10dp"
    android:layout_marginRight="@dimen/margin_10dp"
    android:id="@+id/task_item"
    >

    <RelativeLayout
        android:id="@+id/title_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2"
        >

            <TextView
                style="@style/textViewSmallStyle_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015..06.06"
                />
        <TextView
            android:id="@+id/name_tv"
            style="@style/textViewSmallStyle_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="指派人：张所长"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_2"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addr_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2"
        android:layout_below="@+id/title_one"
        android:layout_marginBottom="@dimen/margin_2"
        >

        <TextView
            style="@style/textViewStyle_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查店名：甄一鸣奶茶（万达店）"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"
            android:layout_alignParentRight="true"
            />

        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        android:layout_below="@+id/addr_rl"
        />

</RelativeLayout>