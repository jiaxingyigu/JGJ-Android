<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yigu.jgj.activity.file.FileActivity">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/jgj_green"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:paddingLeft="@dimen/margin_2"
            android:paddingRight="@dimen/margin_2"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/daily_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="日常巡查"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_big_x"
                android:maxLines="1"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/danger_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="隐患"
                android:textColor="#90e0ce"
                android:textSize="@dimen/text_normal"
                android:maxLines="1"
                android:textStyle="bold"
                android:gravity="center"
                />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/filter_layout"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:layout_below="@+id/header_layout"
        >

        <TextView
            android:id="@+id/filter_adds"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="社区"
            android:textSize="@dimen/text_big"
            android:textColor="@android:color/white"
            android:background="#7cb371"
            android:drawableRight="@mipmap/pop_right_white_icon"
            android:gravity="center"
            android:paddingRight="@dimen/margin_1"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/filter_date"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="match_parent"
            android:text="请选择时间"
            android:textSize="@dimen/text_big"
            android:textColor="@color/jgj_green"
            android:background="#d6e4cc"
            android:drawableRight="@mipmap/date_icon"
            android:gravity="center"
            android:paddingRight="@dimen/margin_3"
            />

    </LinearLayout>

    <com.yigu.jgj.widget.BestSwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/filter_layout"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
        />

    </com.yigu.jgj.widget.BestSwipeRefreshLayout>

    <com.yigu.jgj.view.FilterDateLayout
        android:id="@+id/filterDateLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/filter_layout"
        android:visibility="gone"
        />

</RelativeLayout>
