<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!--导航栏底色-->
        <!--  <item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorAccent">@color/jgj_blue</item>
        <!--可以统一背景色-->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@color/jgj_black</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="loading_dialog" parent="Widget.AppCompat.ProgressBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="textViewStyle">
        <item name="android:textColor">@color/jgj_black</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="textViewStyle_dark">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="textViewBigStyle_dark">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="textViewStyle_middle">
        <item name="android:textColor">@color/gray_middle</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="textViewSmallStyle_light">
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="editViewStyle">
        <item name="android:textColor">@color/jgj_black</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="editViewStyle_gray">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="editViewStyle_bg_white">
        <item name="android:textColor">@color/jgj_black</item>
        <item name="android:background">@drawable/edit_shape_rect_color_white</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColorHint">@color/gray_light</item>
    </style>

    <style name="text_tip_style">
        <item name="android:textSize">@dimen/text_small_x</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="search_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/search_shape_rect_color_gray</item>
        <item name="android:layout_marginLeft">@dimen/margin_10dp</item>
        <item name="android:layout_marginRight">@dimen/margin_10dp</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="submit_button_style_color_green">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/selector_btn_green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tag_text_style_color_green">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:minWidth">66dp</item>
        <item name="android:maxWidth">90dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/txttag_shape_rect_color_lightgreen</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="tag_text_style_color_blue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:minWidth">66dp</item>
        <item name="android:maxWidth">90dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/txttag_shape_rect_color_blue</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="tag_text_style_color_yellow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:maxWidth">90dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/txttag_shape_rect_color_yellow</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

    <style name="PopupWindowAnimation_alpha">
        <item name="android:windowEnterAnimation">@anim/popshow_alpha_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_alpha_anim</item>
    </style>

    <style name="button_style_color_white">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/shape_rect_solid_white_round_5</item>
        <item name="android:layout_marginLeft">@dimen/margin_10dp</item>
        <item name="android:layout_marginRight">@dimen/margin_10dp</item>
        <item name="android:textColor">@color/jgj_green</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <!--弹框样式-->
    <style name="image_dialog_theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/slideAnimation</item>
    </style>

    <style name="slideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_down_in_duration</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out_duration</item>
    </style>

    <style name="submit_button_style_color_lightgreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/selector_btn_lightgreen</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--弹框样式-->
    <style name="dialog_theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item><!--是否半透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

</resources>
