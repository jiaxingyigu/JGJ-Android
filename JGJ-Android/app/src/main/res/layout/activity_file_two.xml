<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yigu.jgj.activity.file.FileTwoActivity"
    android:orientation="vertical"
    >

    <include
        layout="@layout/lay_header"
        />

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tabIndicatorColor="@color/jgj_blue"
        app:tabSelectedTextColor="@color/jgj_blue"
        app:tabTextColor="@color/jgj_black"
        android:layout_below="@+id/header_layout"
        >
    </android.support.design.widget.TabLayout>

    <View
        android:id="@+id/divider_view_one"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        android:layout_below="@+id/tablayout"
        />

    <LinearLayout
        android:id="@+id/filter_layout"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:layout_below="@+id/divider_view_one"
        >



        <TextView
            android:id="@+id/filter_adds"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="社区"
            android:textSize="@dimen/text_big"
            android:textColor="@color/gray_dark"
            android:background="@android:color/white"
            android:drawableRight="@mipmap/pop_right_gray_icon"
            android:gravity="center"
            android:paddingRight="@dimen/margin_1"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_line"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2.2"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/clear_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/clear_icon"
                android:paddingLeft="@dimen/margin_2"
                android:paddingRight="@dimen/margin_2"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/filter_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="请选择时间"
                android:textSize="@dimen/text_big"
                android:textColor="@color/gray_dark"
                android:background="@android:color/white"
                android:drawableRight="@mipmap/date_icon"
                android:gravity="center"
                android:paddingRight="@dimen/margin_3"
                />

        </LinearLayout>





    </LinearLayout>

    <View
        android:id="@+id/divider_view_two"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        android:layout_below="@+id/filter_layout"
        />

    <LinearLayout
        android:id="@+id/ll_search"
        style="@style/search_layout_style"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/divider_view_two"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/search"
            android:layout_marginLeft="@dimen/margin_2"
            />

        <EditText
            android:id="@+id/search_et"
            style="@style/editViewStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_2"
            android:hint="请输入店名或店主名称"
            />

    </LinearLayout>

    <View
        android:id="@+id/divider_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        android:layout_below="@+id/ll_search"
        />

    <com.yigu.jgj.widget.BestSwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider_view"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            />

    </com.yigu.jgj.widget.BestSwipeRefreshLayout>

    <com.yigu.jgj.view.FilterDateLayout
        android:id="@+id/filterDateLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/filter_layout"
        android:visibility="gone"
        />


</RelativeLayout>
