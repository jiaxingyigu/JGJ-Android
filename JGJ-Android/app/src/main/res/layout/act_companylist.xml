<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yigu.jgj.activity.file.FileActivity">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/jgj_blue"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:paddingLeft="@dimen/margin_2"
            android:paddingRight="@dimen/margin_2"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/catering_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="餐饮"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_big_x"
                android:maxLines="1"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/product_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="生产"
                android:textColor="#90e0ce"
                android:textSize="@dimen/text_normal"
                android:maxLines="1"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/currency_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="流通"
                android:textColor="#90e0ce"
                android:textSize="@dimen/text_normal"
                android:maxLines="1"
                android:textStyle="bold"
                android:gravity="center"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_2"
            android:paddingRight="@dimen/margin_2"
            android:textSize="@dimen/text_normal"
            android:textColor="@android:color/white"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/filter_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_layout"
        >

        <LinearLayout
            android:id="@+id/filter_layout"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/filter_one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="全部"
                android:textSize="@dimen/text_big"
                android:textColor="@color/gray_dark"
                android:drawableRight="@mipmap/pop_right_gray_icon"
                android:gravity="center"
                android:paddingRight="@dimen/margin_2"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/divider_line"
                />

            <TextView
                android:id="@+id/filter_two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="全部"
                android:textSize="@dimen/text_big"
                android:textColor="@color/gray_dark"
                android:drawableRight="@mipmap/pop_right_gray_icon"
                android:gravity="center"
                android:paddingRight="@dimen/margin_2"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/divider_line"
                />

            <TextView
                android:id="@+id/filter_three"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="全部"
                android:textSize="@dimen/text_big"
                android:textColor="@color/gray_dark"
                android:drawableRight="@mipmap/pop_right_gray_icon"
                android:gravity="center"
                android:paddingRight="@dimen/margin_2"
                android:maxLines="1"
                android:ellipsize="end"
                />
        </LinearLayout>

        <View
            android:id="@+id/filter_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_line"
            android:layout_below="@+id/filter_layout"
            />



    </RelativeLayout>



    <LinearLayout
        android:id="@+id/ll_search"
        style="@style/search_layout_style"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/filter_rl"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/search"
            android:layout_marginLeft="@dimen/margin_2"
            />

        <EditText
            android:id="@+id/search_et"
            style="@style/editViewStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_2"
            android:hint="请输入店名或店主名称"
            />

    </LinearLayout>

    <View
        android:id="@+id/divider_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        android:layout_below="@+id/ll_search"
        />

    <TextView
        android:id="@+id/pepConutTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="34dp"
        android:text=""
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:textColor="@color/jgj_black"
        android:textSize="@dimen/text_normal"
        android:layout_below="@+id/divider_view"
        />

    <View
        android:id="@+id/count_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line"
        android:layout_below="@+id/pepConutTV"
        />

    <com.yigu.jgj.widget.BestSwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/count_divider"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
        />

    </com.yigu.jgj.widget.BestSwipeRefreshLayout>

    <View
        android:id="@+id/bgVieww"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:layout_below="@+id/filter_rl"
        />

</RelativeLayout>
