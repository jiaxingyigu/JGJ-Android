<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tv_permit_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_4"
        android:layout_marginLeft="@dimen/margin_3"
        android:drawableLeft="@mipmap/line_title_front"
        android:drawablePadding="@dimen/margin_2"
        android:layout_marginTop="3dp"
        android:text="许可项目"
        android:textSize="@dimen/text_big"
        android:textColor="@color/gray_dark"/>

    <CheckBox
        android:id="@+id/tv_food_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_permit_items"
        android:layout_marginTop="@dimen/margin_1"
        android:layout_marginLeft="@dimen/margin_4"
        android:text="食品销售"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/gray_middle"
        android:drawableRight="@drawable/selector_radio_check"
        android:drawablePadding="@dimen/margin_1"
        android:padding="@dimen/margin_1"
        android:gravity="center"
        android:button="@null"
        />
    <CheckBox
        android:id="@+id/tv_food_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_permit_items"
        android:layout_toRightOf="@+id/tv_food_sale"
        android:layout_marginTop="@dimen/margin_1"
        android:layout_marginLeft="@dimen/margin_1"
        android:text="餐饮服务"
        android:textColor="@color/gray_middle"
        android:textSize="@dimen/text_normal"
        android:drawableRight="@drawable/selector_radio_check"
        android:drawablePadding="@dimen/margin_1"
        android:padding="@dimen/margin_1"
        android:gravity="center"
        android:button="@null"
        />
    <CheckBox
        android:id="@+id/tv_canteen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_permit_items"
        android:layout_toRightOf="@+id/tv_food_service"
        android:layout_marginTop="@dimen/margin_1"
        android:layout_marginLeft="@dimen/margin_1"
        android:text="单位食堂"
        android:textColor="@color/gray_middle"
        android:textSize="@dimen/text_normal"
        android:drawableRight="@drawable/selector_radio_check"
        android:drawablePadding="@dimen/margin_1"
        android:padding="@dimen/margin_1"
        android:gravity="center"
        android:button="@null"
        />


