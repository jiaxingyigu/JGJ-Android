<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--导航栏底色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏底色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/jgj_green</item>
        <!--可以统一背景色-->
        <item name="android:windowBackground">@color/background_all</item>
    </style>

    <style name="loading_dialog" parent="Widget.AppCompat.ProgressBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="textViewStyle">
        <item name="android:textColor">@color/jgj_black</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="editViewStyle">
        <item name="android:textColor">@color/jgj_black</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColorHint">@color/gray_middle</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="text_tip_style">
        <item name="android:textSize">@dimen/text_small_x</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

</resources>
